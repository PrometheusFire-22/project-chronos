{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./dist",
    "sourceMap": true,
    "paths": {
      "@chronos/ui": ["./packages/ui/index.tsx"],
      "@chronos/ui/*": ["./packages/ui/*"],
      "@chronos/types": ["./packages/types/index.ts"],
      "@chronos/types/*": ["./packages/types/*"],
      "@chronos/utils": ["./packages/utils/index.ts"],
      "@chronos/utils/*": ["./packages/utils/*"],
      "@chronos/config/*": ["./packages/config/*"]
    },
    "types": ["node"]
  },
  "include": [
    "marketing/scripts/**/*.ts",
    "marketing/scripts/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
