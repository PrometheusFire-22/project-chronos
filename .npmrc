# pnpm Configuration for Project Chronos Monorepo

# Auto-install peer dependencies to avoid manual intervention
auto-install-peers=true

# Don't hoist dependencies to root - maintain strict isolation
shamefully-hoist=false

# Enforce strict peer dependencies (fail on missing peers)
strict-peer-dependencies=true

# Use isolated node linker (symlinks + hard links for efficiency)
node-linker=isolated

# Global pnpm store location (saves disk space via content-addressable storage)
store-dir=~/.pnpm-store

# Lockfile settings
lockfile=true
frozen-lockfile=false
