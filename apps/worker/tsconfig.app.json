{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "esnext",
    "lib": [
      "esnext"
    ],
    "target": "esnext",
    "types": [
      "@cloudflare/workers-types"
    ],
    "outDir": "../../dist/out-tsc",
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./src/*"
      ]
    }
  },
  "files": [
    "src/index.ts"
  ],
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ]
}
