# =============================================================================
# CHRONOS ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to version control
# =============================================================================

# =============================================================================
# DATABASE CONFIGURATION (PostgreSQL + TimescaleDB)
# =============================================================================
# Local Development: Use 'localhost'
# Docker: Use service name 'postgres' or 'chronos-db'
# Production: Use actual host IP/domain
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=chronos
DATABASE_USER=chronos
DATABASE_PASSWORD=your-secure-database-password-here

# Full database URL (used by postgres.js driver)
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://chronos:your-secure-database-password-here@localhost:5432/chronos

# PostgreSQL container configuration (for Docker Compose)
POSTGRES_USER=chronos
POSTGRES_PASSWORD=your-secure-database-password-here
POSTGRES_DB=chronos

# =============================================================================
# DIRECTUS CMS CONFIGURATION
# =============================================================================
# Generate secure random keys with: openssl rand -base64 32
DIRECTUS_KEY=generate-a-random-key-here
DIRECTUS_SECRET=generate-a-random-secret-here
DIRECTUS_ADMIN_EMAIL=admin@yourdomain.com
DIRECTUS_ADMIN_PASSWORD=your-secure-admin-password
DIRECTUS_URL=http://localhost:8055

# Public Directus URL (for Next.js frontend)
NEXT_PUBLIC_DIRECTUS_URL=http://localhost:8055
NEXT_PUBLIC_DIRECTUS_KEY=your-directus-api-key-here

# =============================================================================
# CLOUDFLARE R2 STORAGE (for Directus media uploads)
# =============================================================================
STORAGE_R2_KEY=your-cloudflare-r2-access-key
STORAGE_R2_SECRET=your-cloudflare-r2-secret-key
STORAGE_R2_BUCKET=chronos-media
STORAGE_R2_REGION=auto
STORAGE_R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com

# =============================================================================
# API KEYS FOR DATA SOURCES
# =============================================================================
# Federal Reserve Economic Data (FRED)
# Get key from: https://fred.stlouisfed.org/docs/api/api_key.html
FRED_API_KEY=your-fred-api-key-here

# Bank of England API (optional)
BOE_API_KEY=your-boe-api-key-here

# Bank of Japan API (optional)
BOJ_API_KEY=your-boj-api-key-here

# =============================================================================
# NEXT.JS FRONTEND CONFIGURATION
# =============================================================================
# API URL for frontend to connect to FastAPI
# Local: http://localhost:8000
# Production: https://api.yourdomain.com
NEXT_PUBLIC_API_URL=http://localhost:8000

# Cloudflare Turnstile (CAPTCHA alternative)
# Get from: https://dash.cloudflare.com/
NEXT_PUBLIC_TURNSTILE_SITE_KEY=your-turnstile-site-key
TURNSTILE_SECRET_KEY=your-turnstile-secret-key

# =============================================================================
# AUTHENTICATION (Better Auth)
# =============================================================================
# Generate with: openssl rand -base64 32
BETTER_AUTH_SECRET=generate-a-random-secret-here
BETTER_AUTH_URL=http://localhost:3000

# =============================================================================
# EMAIL SERVICE (Resend)
# =============================================================================
# Get API key from: https://resend.com/api-keys
RESEND_API_KEY=re_your_resend_api_key_here

# =============================================================================
# CI/CD & DEPLOYMENT
# =============================================================================
# Cloudflare Pages (auto-set during deployment)
CF_PAGES_COMMIT_SHA=auto-set-by-cloudflare

# Node environment
NODE_ENV=development

# Python path (for ingestion scripts)
PYTHONPATH=/workspace/src

# =============================================================================
# TWENTYCRM CONFIGURATION (optional - for CRM features)
# =============================================================================
TWENTY_DB_PASSWORD=your-twenty-db-password
TWENTY_ACCESS_TOKEN_SECRET=generate-a-random-secret
TWENTY_REFRESH_TOKEN_SECRET=generate-a-random-secret
TWENTY_LOGIN_TOKEN_SECRET=generate-a-random-secret
TWENTY_FILE_TOKEN_SECRET=generate-a-random-secret
TWENTY_APP_SECRET=generate-a-random-secret

# =============================================================================
# PGADMIN CONFIGURATION (optional - for database management)
# =============================================================================
PGADMIN_EMAIL=admin@yourdomain.com
PGADMIN_PASSWORD=your-secure-pgadmin-password

# =============================================================================
# MONITORING & ERROR TRACKING (optional)
# =============================================================================
# Sentry DSN (for error tracking)
# Get from: https://sentry.io/settings/
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# NX Cloud (for build caching)
# Get from: https://cloud.nx.app
# This token enables distributed caching across local and CI builds
NX_CLOUD_ACCESS_TOKEN=your-nx-cloud-token-here

# =============================================================================
# SECURITY NOTES
# =============================================================================
# - NEVER commit .env.local or .env.production to git
# - Use strong, unique passwords (minimum 32 characters)
# - Rotate keys and secrets regularly
# - Use different values for development, staging, and production
# - Store production secrets in secure vault (e.g., AWS Secrets Manager, 1Password)
#
# To generate secure random values:
#   openssl rand -base64 32
#   openssl rand -hex 32
# =============================================================================
