{
  "name": "Project Chronos - Dev Container",
  
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".",
    "args": {
      "USER_UID": "1000",
      "USER_GID": "1000"
    }
  },
  
  "initializeCommand": "docker compose up -d timescaledb",
  
  "workspaceFolder": "/workspace",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached",
  
  "runArgs": [
    "--network=project-chronos_chronos-network",
    "--name=chronos-devcontainer"
  ],
  
  "mounts": [
    "source=${localEnv:HOME}/.ssh,target=/home/vscode/.ssh,readonly,type=bind,consistency=cached"
  ],
  
  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11",
      "installTools": true
    },
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "configureZshAsDefaultShell": true,
      "username": "vscode",
      "userUid": "1000",
      "userGid": "1000"
    }
  },
  
  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.formatting.provider": "black",
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "ms-python.black-formatter",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": false,
        "python.linting.flake8Enabled": true,
        "files.watcherExclude": {
          "**/.git/objects/**": true,
          "**/.git/subtree-cache/**": true,
          "**/node_modules/**": true,
          "**/.venv/**": true,
          "**/venv/**": true,
          "**/__pycache__/**": true,
          "**/.pytest_cache/**": true
        },
        "terminal.integrated.defaultProfile.linux": "zsh"
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.black-formatter",
        "charliermarsh.ruff",
        "mtxr.sqltools",
        "mtxr.sqltools-driver-pg",
        "eamodio.gitlens",
        "mhutchie.git-graph",
        "donjayamanne.githistory"
      ]
    }
  },
  
  "forwardPorts": [5432],
  "portsAttributes": {
    "5432": {
      "label": "PostgreSQL/TimescaleDB",
      "onAutoForward": "notify"
    }
  },
  
  "postCreateCommand": "pip install --upgrade pip && pip install -e . && pip install -r requirements.txt",
  
  "containerEnv": {
    "PYTHONPATH": "/workspace/src",
    "PYTHONUNBUFFERED": "1",
    "PYTHONDONTWRITEBYTECODE": "1",
    "DATABASE_HOST": "chronos-db",
    "DATABASE_PORT": "5432",
    "DATABASE_NAME": "${localEnv:DATABASE_NAME}",
    "DATABASE_USER": "${localEnv:DATABASE_USER}",
    "DATABASE_PASSWORD": "${localEnv:DATABASE_PASSWORD}"
  },
  
  "remoteUser": "vscode"
}