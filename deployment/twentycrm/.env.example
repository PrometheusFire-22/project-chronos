# TwentyCRM Environment Variables Template
# These values are used in docker-compose.yml on the Lightsail VM
# DO NOT commit actual credentials - this is a template only

# Database Connection
# Using 'twenty' schema in existing 'chronos' database
PG_DATABASE_URL=postgresql://twenty_user:TwentySecure2025!ChangeMe@host.docker.internal:5432/chronos?schema=twenty

# Server URLs
SERVER_URL=https://crm.automatonicai.com
FRONT_BASE_URL=https://crm.automatonicai.com

# Security Secrets (auto-generated during installation)
# These are generated by install.sh using: openssl rand -base64 32
ACCESS_TOKEN_SECRET=__GENERATED_ACCESS_SECRET__
REFRESH_TOKEN_SECRET=__GENERATED_REFRESH_SECRET__
LOGIN_TOKEN_SECRET=__GENERATED_LOGIN_SECRET__
FILE_TOKEN_SECRET=__GENERATED_FILE_SECRET__

# Storage Configuration
STORAGE_TYPE=local
STORAGE_LOCAL_PATH=/app/storage

# Email Configuration
EMAIL_FROM_ADDRESS=crm@automatonicai.com
EMAIL_FROM_NAME=Chronos CRM

# Optional: Email Delivery (if using SMTP)
# EMAIL_DRIVER=smtp
# EMAIL_SMTP_HOST=smtp.example.com
# EMAIL_SMTP_PORT=587
# EMAIL_SMTP_USER=user@example.com
# EMAIL_SMTP_PASSWORD=password
# EMAIL_SMTP_SECURE=true

# PostgreSQL User Credentials
# Created during installation in setup-database.sql
POSTGRES_USER=twenty_user
POSTGRES_PASSWORD=TwentySecure2025!ChangeMe  # CHANGE THIS BEFORE DEPLOYING
